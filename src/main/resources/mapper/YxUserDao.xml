<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhanghui.yx.dao.YxUserDao">
    <sql id="Base_Column_List">
        id,
        user_name,
        brief,
        phone,
        head_img,
        wechat,
        create_date,
        status,
        sex,
        city
    </sql>
    <resultMap type="com.zhanghui.yx.entity.YxUser" id="YxUserMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="brief" column="brief" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="headImg" column="head_img" jdbcType="VARCHAR"/>
        <result property="wechat" column="wechat" jdbcType="VARCHAR"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="YxUserMap">
        select id,
               user_name,
               brief,
               phone,
               head_img,
               wechat,
               create_date,
               status,
               sex,
               city
        from yingx.yx_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="YxUserMap">
        select id,
               user_name,
               brief,
               phone,
               head_img,
               wechat,
               create_date,
               status,
               sex,
               city
        from yingx.yx_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="YxUserMap">
        <where>
            <if test="id != null and id != ''">
                and #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="brief != null and brief != ''">
                and brief = #{brief}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="headImg != null and headImg != ''">
                and head_img = #{headImg}
            </if>
            <if test="wechat != null and wechat != ''">
                and wechat = #{wechat}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into yingx.yx_user(id, user_name, brief, phone, head_img, wechat, create_date, status, sex, city)
        values (#{id}, #{userName}, #{brief}, #{phone}, #{headImg}, #{wechat}, #{createDate}, #{status}, #{sex},
                #{city})
    </insert>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from yingx.yx_user
        where id = #{id}
    </delete>

    <!--查询总条数-->
    <select id="selectIdCount" resultType="java.lang.Integer">
        select count(id)
        from yingx.yx_user
    </select>

    <!--通过主键修改数据-->
    <update id="update">
        update yingx.yx_user
        <trim prefix="set" suffixOverrides=",">
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="brief != null and brief != ''">
                brief = #{brief},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="headImg != null and headImg != ''">
                head_img = #{headImg},
            </if>
            <if test="wechat != null and wechat != ''">
                wechat = #{wechat},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="sex != null and sex != ''">
                sex=#{sex},
            </if>
            <if test="city != null and city != ''">
                city=#{city}
            </if>
        </trim>
        where id = #{id}
    </update>

    <!--auto generated by MybatisCodeHelper on 2020-07-10-->
    <select id="selectAllBySexGroupByCity" resultType="com.zhanghui.yx.eChartsVO.CityVO">
        select city name, count(id) value
        from yingx.yx_user
        where sex = #{sex,jdbcType=VARCHAR}
        group by city
    </select>

    <!--auto generated by MybatisCodeHelper on 2020-07-10-->
    <select id="selectAllBySexAndCreateDate" resultType="com.zhanghui.yx.eChartsVO.MonthAndCountVO">
        select sex, count(id) as count, concat(month(create_date), '月') as month
        from yingx.yx_user
        where sex = #{sex,jdbcType=VARCHAR}
        group by MONTH(create_date)
        order by MONTH(create_date)
    </select>
</mapper>